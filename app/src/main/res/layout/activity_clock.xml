<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:layout_gravity="center"
    tools:context=".Views.Slots.Clock">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/backbtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="35sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:drawableStart="@drawable/baseline_arrow_back_24"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            />
        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tempo"
            android:textSize="25sp"
            android:textColor="@color/cor_p"
            android:textStyle="bold"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="10dp"
            />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/cinza"
        android:layout_marginTop="40dp"
        ></LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Data: "
            android:textSize="18sp"
            android:textColor="@color/cor_p"
            android:textStyle="bold"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="20dp"
            />

        <TextView
            android:id="@+id/dataCada"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00/00/00"
            android:textSize="15sp"
            android:textColor="@color/cor_p"
            android:textStyle="bold"
            android:layout_marginStart="45dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hora: "
            android:textSize="18sp"
            android:textColor="@color/cor_p"
            android:textStyle="bold"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="20dp"
            />

        <TextView
            android:id="@+id/horaCada"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00:00"
            android:textSize="15sp"
            android:textColor="@color/cor_p"
            android:textStyle="bold"
            android:layout_marginStart="45dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:id="@+id/txtTitle1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Placa"
            android:textSize="18sp"
            android:textColor="@color/cor_p"
            android:textStyle="bold"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="20dp"
            />
        <TextView
            android:id="@+id/txtPlaca"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AAG 931"
            android:textSize="15sp"
            android:textColor="@color/cor_p"
            android:textStyle="bold"
            android:layout_marginStart="45dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:id="@+id/txtTitle53"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Marca"
            android:textSize="18sp"
            android:textColor="@color/cor_p"
            android:textStyle="bold"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="20dp"
            />
        <TextView
            android:id="@+id/marcaCarro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bmw"
            android:textSize="15sp"
            android:textColor="@color/cor_p"
            android:textStyle="bold"
            android:layout_marginStart="45dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:id="@+id/txtTitle5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nome do proprietario"
            android:textSize="18sp"
            android:textColor="@color/cor_p"
            android:textStyle="bold"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="20dp"
            />
        <TextView
            android:id="@+id/nomPro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lingui Paulo"
            android:textSize="15sp"
            android:textColor="@color/cor_p"
            android:textStyle="bold"
            android:layout_marginStart="45dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:id="@+id/txtTitle9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Slot"
            android:textSize="18sp"
            android:textColor="@color/cor_p"
            android:textStyle="bold"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="20dp"
            />
        <TextView
            android:id="@+id/slotNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="slot01"
            android:textSize="15sp"
            android:textColor="@color/cor_p"
            android:textStyle="bold"
            android:layout_marginStart="45dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="10dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/cinza"
            android:layout_marginTop="40dp"
            ></LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Relogio: "
            android:textSize="18sp"
            android:textColor="@color/cor_p"
            android:textStyle="bold"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="20dp"
            />

        <TextView
            android:id="@+id/relogio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00:00"
            android:textSize="15sp"
            android:textColor="@color/cor_p"
            android:textStyle="bold"
            android:layout_marginStart="45dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Valor a pagar: "
            android:textSize="18sp"
            android:textColor="@color/cor_p"
            android:textStyle="bold"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="20dp"
            />

        <TextView
            android:id="@+id/converti"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00:00"
            android:textSize="15sp"
            android:textColor="@color/cor_p"
            android:textStyle="bold"
            android:layout_marginStart="45dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="10dp"
            />
        <Button
            android:id="@+id/btnLiberar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/pri"
            android:padding="15dp"
            android:layout_margin="30dp"
            android:text="Liberar" />
    </LinearLayout>

</ScrollView>